@model IEnumerable<Domain.Subject>

@{
    ViewBag.Title = "Subjects";
    Layout = "~/Views/Shared/_AdminNewLayout.cshtml";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .icons {
        display: none;
    }
</style>
<div class="container">
    <div class="header">
        <p class="category">@Html.ActionLink("Add Subject", "CreateSubject", null, new { @class = "btn btn-info" })</p>
    </div>
    <table class="table table-striped table-responsive table-full-width">
        <tr class="success">
            <th>
                @Html.DisplayName("Category Name")
            </th>
            <th>
                @Html.DisplayName("Category Active")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a href="@Url.Action("EditSubject",new {id=item.PKSubjectId })"><input type="button" value="Edit" class="btn btn-primary" /></a>
                </td>
            </tr>
        }

    </table>
    </div>