<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <link href="/Content/animate.min.css" rel="stylesheet" />
    <link href="/Content/paper-dashboard.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="/assets/css/themify-icons.css" rel="stylesheet">
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
</head>
<body>
    @{
        string photo = Data_Access.DbHelper.GetUserProfile(Helper.UserId).PhotoUrl;
        string path = "~/Images/noimage.jpg";
        string url = Url.Content((photo == null) ? path : photo);
    }
    <div class="wrapper">
        <div class="sidebar" data-background-color="white" data-active-color="danger">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/Admin/Index" class="simple-text">
                        For Teacher
                    </a>
                </div>
                <ul class="nav">
                    <li class="text-center">
                        <img src="@url" class="img-circle img-no-padding " style="max-height:100px ;max-width:100px" " />
                    </li>
                    <li>
                        <a href='@Url.Action("States","Admin")'>
                            <i class="ti-files"></i>
                            <p>States</p>
                        </a>
                    </li>

                    <li>
                        <a href='@Url.Action("Cities","Admin")'>
                            <i class="ti-files"></i>
                            <p>cities</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Subjects","Admin")'>
                            <i class="ti-files"></i>
                            <p>Categories</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("UserProfiles","Admin")'>
                            <i class="ti-user"></i>
                            <p>User Profiles</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("TeacherProfile","Admin")'>
                            <i class="ti-user"></i>
                            <p>Vender Profile</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("AvailableTeacherTime","Admin")'>
                            <i class="ti-alarm-clock"></i>
                            <p>Vender Available Time</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Class","Admin")'>
                            <i class="ti-widget"></i>
                            <p>vender Category</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("LoginHistory", "Admin")'>
                            <i class="ti-book"></i>
                            <p>Login History</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("UserEnquires","Admin")'>
                            <i class="ti-bell"></i>
                            <p>User Enquires</p>
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("LogOut","Account")'>
                            <i class="ti-lock"></i>
                            <p>LogOut</p>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar bar1"></span>
                            <span class="icon-bar bar2"></span>
                            <span class="icon-bar bar3"></span>
                        </button>
                        <a class="navbar-brand" href="#">Dashboard</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">

                            <li>
                                <h3 class="simple-text">Hello @Helper.UserName</h3>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div>
                @RenderBody()
            </div>
        </div>

    </div>


    <footer>
        <div class="copyright pull-right">
            &copy;
            <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="#">For Teachers</a>
        </div>
    </footer>
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>
    @*<script src="/Scripts/bootstrap.min.js"></script>*@
    <script src="/assets/js/bootstrap-checkbox-radio.js"></script>
    <script src="/scripts/bootstrap-notify.js"></script>
    <script src="/assets/js/paper-dashboard.js"></script>
    @*<script src="/scripts/paper-dashboard.js"></script>*@
    @RenderSection("scripts", required: false)
   
</body>
</html>
