<div id="myModal" class="modal fade" role="form" style="padding-top:30px">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color:#f5511e">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:White">Login</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Login", "Account", new { returnurl = Request.Url }, FormMethod.Post))
                {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("UserName", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="text" class="form-control" pattern="[a-zA-Z][a-zA-Z ]+[a-zA-Z]$" id="UserName" name="UserName" data-val="true" data-val-required="Please enter the Name" placeholder="Name" required>
                                <span class="field-validation-valid"
                                      data-valmsg-for="UserName"
                                      data-valmsg-replace="true"
                                      style="color:red"></span>
                                @*@Html.TextBox("UserName", null, new { @class = "form-control" })
                                @Html.ValidationMessage("UserName", "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" data-val="true" data-val-required="Please enter the Password" required>
                                <span class="field-validation-valid"
                                      data-valmsg-for="Password"
                                      data-valmsg-replace="true"
                                      style="color:red"></span>
                                @*@Html.Password("Password", null, new { @class = "form-control" })
                                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("RememberMe", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8" style="padding-left: 32px;">
                                <div class="checkbox">
                                    @Html.CheckBox("RememberMe")
                                    @Html.ValidationMessage("RememberMe", "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Login" class="btn btn-default" style="color:#f5511e" />
                                <button type="button" class="btn btn-default btnClose" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                }
                <a href="@Url.Action("ForgetPassword","Account")">Forget Password...?</a>
            </div>
           
        </div>

    </div>
</div>

