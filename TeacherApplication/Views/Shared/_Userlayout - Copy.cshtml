    <script type="text/javascript">
        $(document).ready(function () {
            $('#States').change(function () {
                var id = $('#States').val();
                $.getJSON("/User/GetCities?stateId=" + id, function (data) {
                    $("#Cities").empty();
                    $("#Cities").append($("<option></option>").val('').html('Select Cities'));
                    $.each(data, function (key, item) {
                        $("#Cities").append($("<option></option>").val(item.PKCityId).html(item.CityName));
                    });
                    //GetCategories(id);
                })
            });

            $(".categoryLink").on("click", function (e) {
                e.preventDefault(); // cancel the link itself
                $(this).next(".btn-link").trigger('click');
            });

            $("#btnlink").on("click", function (e) {
                e.preventDefault(); // cancel the link itself
                $("#btnLogin").trigger('click');
            });

            $("#Cities").change(function () {
                var stateId = $('#States').val();
                var cityId = $('#Cities').val();
                // GetCategories(stateId, cityId);
                GetVendors(cityId);
            });
            $("#btnregister").on("click", function (e) {
                e.preventDefault(); // cancel the link itself
                $("#btnregisterlink").trigger('click');
            });


            function GetVendors(cityId) {
                $.ajax("/User/GetVendors?cityId=" + cityId, {
                    type: "GET",
                    success: function (data) {
                        $("#Vendercontent").empty();
                        $("#Vendercontent").html(data);
                    }
                })
            }


            function GetCategories(stateId, cityId) {
                $.getJSON("/User/GetSubject?stateId=" + stateId + "&cityId=" + cityId).success(function (data) {
                    $("#mainMenu").empty();
                    var str = "<li><a href='/' style='color:White'><img src='/Images/home_icon.png'>Home</a></li>"
                    $.each(data, function (key, value) {
                        str += "<li><a  href='@Url.Action("Index","User",null)'><img class='categoryLink' src='/Images/" + value.SubjectName + ".png' alt='" + value.SubjectName + "'><input type='submit' class='btn btn-link'  value='" + value.SubjectName + "' name='subjectlink' style='color:White' /></a></li>"
                    });
                    $("#mainMenu").append(str);
                })
            }
        });
    </script>
