@model IEnumerable<Domain.Class>


@{
    ViewBag.Title = "Categories";
    //Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    Layout = "~/Views/Shared/_TeacherNewLayout.cshtml";
}


<table class="table table-bordered table-responsive w3-hoverable w3-white">
    <tr class="success">
        <th>
            @Html.DisplayName("Category Name")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>*@
        <th>
            @Html.DisplayName("IsAdminApproved")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.IsApproved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.UserName)
        </td>
        <td>
            <a href="@Url.Action("EditClass", new { id = item.PKClassId })"><input type="button" value="Edit" class="w3-button w3-white w3-border w3-border-blue w3-round-large" /></a>
            @*<a href="@Url.Action("ClassDetails", new { id = item.PKClassId })"><input type="button" value="Details" class="btn btn-info" /></a>*@
            <a href="@Url.Action("DeleteClass", new { id = item.PKClassId })"><input type="button" value="Delete" class="w3-button w3-white w3-border w3-border-red w3-round-large" /></a>
        </td>
    </tr>
}

</table>
