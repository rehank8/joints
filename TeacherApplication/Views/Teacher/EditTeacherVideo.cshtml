@model Domain.UserVideo

@{
    ViewBag.Title = "EditTeacherVideos";
    //Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    Layout = "~/Views/Shared/_TeacherNewLayout.cshtml";
}

<h2>EditTeacherVideo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PKUserVideoId)
        @Html.HiddenFor(model => model.FKClassId)

        <div class="form-group">
            <label class="control-label col-md-2">Video</label>
            <div class="col-md-10">
                <iframe height="180" src="@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VideoUrl, "Edit VideoUrl", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.VideoUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VideoUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <p class="text-center">
           <i class="fa fa-edit"></i> Please enter the video urls
        </p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="w3-button w3-white w3-border w3-border-blue w3-round-large" />
                <a href="/Teacher/TeacherVideos/@Model.FKClassId"><input type="button" value="Cancel" class="w3-button w3-white w3-border w3-border-red w3-round-large" /></a>
            </div>
        </div>
    </div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
