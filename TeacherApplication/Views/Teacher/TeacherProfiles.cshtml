@model IEnumerable<Domain.TeacherProfile>


@{
    ViewBag.Title = "TeacherProfiles";
    //Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    Layout = "~/Views/Shared/_TeacherNewLayout.cshtml";
}
<table class="table table-bordered table-responsive w3-hoverable w3-white">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.UserName)
        </th>
        <th>
            @Html.DisplayName("Category Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Experience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class.ClassName)
        </td>
        <td>
            <a href="@Url.Action("EditTeacherProfile",new {id=item.PKTeachersId })"><input type="button" value="Edit" class="w3-button w3-white w3-border w3-border-blue w3-round-large" /></a>
            @*<a href="@Url.Action("TeacherProfileDetails",new {id=item.PKTeachersId })"><input type="button" value="Details" class="w3-button w3-white w3-border w3-border-red w3-round-large" /></a>*@
        </td>
    </tr>
}

</table>
